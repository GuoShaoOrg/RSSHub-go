FROM loads/alpine:3.8

###############################################################################
#                                INSTALLATION
###############################################################################

ENV WORKDIR                 /app
# ADD resource                $WORKDIR/
ADD ./bin/linux_amd64/rssgo $WORKDIR/rssgo
RUN chmod +x $WORKDIR/rssgo

###############################################################################
#                                   START
###############################################################################
WORKDIR $WORKDIR
CMD ./rssgo
